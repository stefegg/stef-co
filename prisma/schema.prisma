generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Product {
  id String @default(cuid()) @id
  name String
  price Int
  currency String
  stock Int
  description String
  specs String[]
  imageUrl String?
  createdAt DateTime @default(now())
  active Boolean @default(false)
  featured Boolean @default(false)
  category Category @relation(fields:[categoryId], references: [id]) 
  categoryId String
  orders OrderItem[]
  @@unique([name])
}

model Category {
  id String @default(cuid()) @id
  name String
  imageUrl String
  products Product[]
  @@unique([name])
}

model User {
  id String @default(uuid()) @id
  email String
  password String
  addresses CustomerAddress[]
  orders Order[]
  wishlist Wishlist?
  @@unique([email])
}

model CustomerAddress {
  id String @default(uuid()) @id
  user User @relation(fields:[userId], references: [id])
  userId String
  firstName String
  lastName String
  AddressOne String
  AddressTwo String?
  City String
  State String
  ZipCode String
  @@unique([userId])
}

model Order {
  id String @default(uuid()) @id
  user User @relation(fields:[userId], references: [id])
  userId String
  orderItems OrderItem[]
  createdAt DateTime @default(now())
  orderTotal Int
  shipMethod String
}

model OrderItem {
  id String @default(uuid()) @id
  product Product @relation(fields:[productId], references: [id])
  order Order @relation(fields:[orderId], references: [id])
  orderId String 
  productId String
  quantity Int
}

model Wishlist {
  id String @default(uuid()) @id
  user User @relation(fields:[userId], references:[id])
  userId String
  wishlistItems WishlistItem[]
  @@unique([userId])
}

model WishlistItem {
  id String @default(uuid()) @id
  prodId String
  name String
  price Int 
  imageUrl String
  currency String
  wishlist Wishlist @relation(fields:[wishlistId], references:[id])
  wishlistId String
}
